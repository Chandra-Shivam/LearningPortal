@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject AuthenticationStateProvider AuthStateProvider


<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">ElearningPortal</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        @if (user.IsInRole("User"))
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/dashboard">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Dashboard
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/courses">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Courses
                </NavLink>
            </div>
        }
        @if (user.IsInRole("Admin"))
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                    <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/admin/addcourse">
                    <span class="bi bi-shield-lock-fill-nav-menu" aria-hidden="true"></span> Add Course
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/admin/add-categories">
                    <span class="bi bi-shield-lock-fill-nav-menu" aria-hidden="true"></span> Add Categories
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/admin/add-quiz">
                    <span class="bi bi-shield-lock-fill-nav-menu" aria-hidden="true"></span> Add Quiz
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    private ClaimsPrincipal user { get; set; }
    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        user = authState.User;
    }
}
